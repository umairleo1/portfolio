# ==================================
# PORTFOLIO APPLICATION - ENVIRONMENT TEMPLATE
# Copy this file to .env and fill in your actual values
# ==================================

# ------ ENVIRONMENT CONFIGURATION ------
NODE_ENV=development
REACT_APP_ENVIRONMENT=development

# ------ APPLICATION METADATA ------
REACT_APP_NAME=Your Name - Professional Portfolio
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Your portfolio description
REACT_APP_AUTHOR=Your Full Name
REACT_APP_LOCATION=Your City, Your Country

# ------ DEPLOYMENT CONFIGURATION ------
REACT_APP_BASE_URL=https://yourusername.github.io/portfolio
PUBLIC_URL=/portfolio
REACT_APP_DOMAIN=yourusername.github.io

# ------ ANALYTICS & TRACKING ------
# Google Analytics 4 - Get from https://analytics.google.com/
REACT_APP_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# Optional: Google Tag Manager
REACT_APP_GTM_ID=GTM-XXXXXXX
# Optional: Microsoft Clarity for user behavior analytics
REACT_APP_CLARITY_ID=xxxxxxxxxx

# ------ CONTACT FORM SERVICES ------
# EmailJS Configuration - Sign up at https://www.emailjs.com/
REACT_APP_EMAILJS_SERVICE_ID=service_xxxxxx
REACT_APP_EMAILJS_TEMPLATE_ID=template_xxxxxx
REACT_APP_EMAILJS_PUBLIC_KEY=your_public_key_here
# Alternative: Formspree (if using Formspree instead of EmailJS)
REACT_APP_FORMSPREE_ENDPOINT=https://formspree.io/f/xxxxxxxx

# ------ PERSONAL INFORMATION ------
REACT_APP_FULL_NAME=Your Full Name
REACT_APP_PROFESSIONAL_TITLE=Your Job Title
REACT_APP_EMAIL=your.email@example.com
REACT_APP_PHONE=+1234567890

# ------ SOCIAL MEDIA & PROFESSIONAL LINKS ------
REACT_APP_GITHUB_USERNAME=yourusername
REACT_APP_GITHUB_URL=https://github.com/yourusername
REACT_APP_LINKEDIN_URL=https://www.linkedin.com/in/yourprofile
REACT_APP_TWITTER_URL=https://twitter.com/yourusername
# Optional: Additional professional profiles
REACT_APP_STACKOVERFLOW_URL=https://stackoverflow.com/users/yourprofile
REACT_APP_MEDIUM_URL=https://medium.com/@yourusername
REACT_APP_DEV_TO_URL=https://dev.to/yourusername

# ------ RESUME & PORTFOLIO ASSETS ------
REACT_APP_RESUME_URL=https://your-resume-link.com
REACT_APP_RESUME_DOWNLOAD_URL=/resume.pdf
REACT_APP_PORTFOLIO_REPO=https://github.com/yourusername/portfolio

# ------ API INTEGRATIONS ------
# GitHub API (for dynamic repository data)
REACT_APP_GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx
# Optional: Dev.to API for blog posts
REACT_APP_DEVTO_API_KEY=your_devto_api_key
# Optional: Medium RSS feed
REACT_APP_MEDIUM_RSS_URL=https://medium.com/feed/@yourusername

# ------ SEO & METADATA ------
REACT_APP_SEO_KEYWORDS=Your,Professional,Keywords,Here
REACT_APP_SEO_DESCRIPTION=Your professional description for SEO
REACT_APP_CANONICAL_URL=https://yourusername.github.io/portfolio

# ------ SECURITY & PRIVACY ------
# Content Security Policy settings
REACT_APP_CSP_REPORT_URI=https://your-csp-report-endpoint.com
# Optional: Sentry for error tracking
REACT_APP_SENTRY_DSN=https://xxxxxx@sentry.io/xxxxxx

# ------ PERFORMANCE & MONITORING ------
# Optional: Web Vitals reporting endpoint
REACT_APP_WEB_VITALS_ENDPOINT=https://your-vitals-endpoint.com
# Optional: Performance monitoring
REACT_APP_PERFORMANCE_API_ENDPOINT=https://your-performance-endpoint.com

# ------ DEVELOPMENT TOOLS ------
# Enable/disable development features
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false
REACT_APP_ENABLE_ANALYTICS_DEBUG=false

# ------ FEATURE FLAGS ------
REACT_APP_ENABLE_CONTACT_FORM=true
REACT_APP_ENABLE_RESUME_DOWNLOAD=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_ENABLE_CURSOR_EFFECTS=true